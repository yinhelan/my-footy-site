---
const ga = (import.meta.env.PUBLIC_GA4_ID ?? '(empty)').toString();
const envObj = Object.fromEntries(
  Object.entries(import.meta.env).filter(([k]) => k.startsWith('PUBLIC_'))
);
---
<!DOCTYPE html><html lang="en"><head><meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1"><title>Env debug</title></head><body style="font-family:system-ui;max-width:840px;margin:24px auto;padding:0 16px">
<h1>Env debug</h1>
<p><b>PUBLIC_GA4_ID:</b> {ga}</p>
<pre style="white-space:pre-wrap;border:1px solid #ddd;border-radius:8px;padding:12px;background:#fafafa">{JSON.stringify(envObj,null,2)}</pre>
<p><a href="/">Home</a> · <a href="/tools/poisson/">Poisson</a> · <a href="/articles/">Articles</a></p>
</body></html>
